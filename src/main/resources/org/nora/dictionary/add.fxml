<BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.nora.dictionary.controllers.AddController">
   <center>
      <AnchorPane prefHeight="600.0" prefWidth="900.0" BorderPane.alignment="CENTER">
         <children>
            <TextArea fx:id="wordField" layoutX="68.0" layoutY="35.0" onKeyTyped="#onWordFieldType" prefHeight="70.0" prefWidth="350.0" promptText="Type word to add to dictionary here" wrapText="true">
               <font>
                  <Font size="18.0" />
               </font>
            </TextArea>
            <HTMLEditor fx:id="explainField" disable="true" htmlText="&lt;html&gt;&lt;head&gt;&lt;/head&gt;&lt;body contenteditable=&quot;true&quot;&gt;&lt;/body&gt;&lt;/html&gt;" layoutX="68.0" layoutY="120.0" prefHeight="400.0" prefWidth="425.0" />
            <Label fx:id="warningLabel" graphicTextGap="0.0" layoutX="450.0" layoutY="35.0" prefHeight="70.0" prefWidth="200.0" textAlignment="CENTER" wrapText="true">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
               <padding>
                  <Insets left="10.0" right="10.0" />
               </padding>
            </Label>
            <Button fx:id="addButton" disable="true" layoutX="736.0" layoutY="239.0" mnemonicParsing="false" onAction="#onAddButtonClick" prefHeight="70.0" prefWidth="110.0" text="Add to Dictionary" textAlignment="CENTER" wrapText="true">
               <font>
                  <Font name="System Bold Italic" size="16.0" />
               </font>
            </Button>
            <TextField fx:id="pronunciationField" disable="true" layoutX="515.0" layoutY="204.0" prefHeight="45.0" prefWidth="190.0" promptText="Word pronunciation">
               <font>
                  <Font size="16.0" />
               </font>
            </TextField>
            <TextArea fx:id="shortDescArea" disable="true" layoutX="515.0" layoutY="274.0" prefHeight="190.0" prefWidth="190.0" promptText="Short description for word" wrapText="true">
               <font>
                  <Font size="16.0" />
               </font>
            </TextArea>
         </children>
      </AnchorPane>
   </center>
</BorderPane>
