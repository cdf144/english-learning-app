<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<BorderPane prefHeight="526.0" prefWidth="709.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.nora.dictionary.controllers.SearcherController">
   <left>
            <VBox prefHeight="560.0" prefWidth="230.0" BorderPane.alignment="CENTER" />
   </left>
   <center>
            <Label fx:id="wordExplainLabel" alignment="TOP_LEFT" prefHeight="560.0" prefWidth="646.0" BorderPane.alignment="CENTER" />
   </center>
   <top>
            <HBox alignment="CENTER" BorderPane.alignment="CENTER">
                <children>
                    <TextField fx:id="wordSearchField" prefHeight="35.0" prefWidth="446.0" promptText="Enter your search word here" />
                    <Button fx:id="searchButton" mnemonicParsing="false" onAction="#searchWord" prefHeight="35.0" prefWidth="87.0" text="Search" />
                </children>
            </HBox>
   </top>
</BorderPane>
